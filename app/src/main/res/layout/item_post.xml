<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="430dp">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:text="Cleevens" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLike"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="16sp"
        tools:text="This is text This is text  This is text  This is text  This is text  v vThis is text  vThis is text  This is text  This is text This is text  This is text This is text  This is text " />


    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="44dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/ufi_heart" />


    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivLike"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivSendIt"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@+id/ivImage"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/ivComment"
        app:srcCompat="@drawable/ufi_new_direct" />


    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/btn_media" />

    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/ufi_save" />

</RelativeLayout>